---
import Base from '../layouts/Base.astro';
import site from '../content/site.json';
import { withBase } from '../lib/images';

const { privacy } = site;
---
<Base title={privacy.title} description={privacy.summary}>
  <main class="px-6 py-16 md:px-12">
    <div class="mx-auto max-w-3xl space-y-8">
      <header class="space-y-4">
        <p class="text-xs uppercase tracking-[0.3em] text-fog">Actualizado {privacy.updated}</p>
        <h1 class="text-3xl font-semibold text-sand md:text-4xl">{privacy.title}</h1>
        <p class="text-base text-fog">{privacy.summary}</p>
      </header>
      <section class="space-y-4 text-base leading-relaxed text-fog">
        {privacy.body.map((paragraph) => (
          <p>{paragraph}</p>
        ))}
      </section>
      <a class="text-xs uppercase tracking-[0.3em] text-gold" href={withBase('/')}>
        Volver al inicio
      </a>
    </div>
  </main>
</Base>
