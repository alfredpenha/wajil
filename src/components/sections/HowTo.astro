---
import { AnalyticsEvents } from '../../lib/analytics';
import { baseFromPath, buildSrcset, withBase } from '../../lib/images';
import ButtonGold from '../ui/ButtonGold.astro';
import Card from '../ui/Card.astro';

const { howTo, uberEats } = Astro.props;
const howToBase = baseFromPath(howTo.background.fallback);
const howToWidths = [512];
const howToAvif = buildSrcset(howToBase, howToWidths, 'avif');
const howToWebp = buildSrcset(howToBase, howToWidths, 'webp');
const howToJpg = buildSrcset(howToBase, howToWidths, 'jpg');
const howToFallback = withBase(howTo.background.fallback);
---
<section class="section-x relative overflow-hidden border-t border-fog/10 bg-ink py-16">
  <div class="absolute inset-0">
    <picture>
      <source srcset={howToAvif} sizes="100vw" type="image/avif" />
      <source srcset={howToWebp} sizes="100vw" type="image/webp" />
      <img
        class="h-full w-full object-cover opacity-10"
        src={howToFallback}
        alt={howTo.background.alt}
        width="1024"
        height="1024"
        srcset={howToJpg}
        sizes="100vw"
        aria-hidden="true"
        loading="lazy"
        decoding="async"
      />
    </picture>
  </div>
  <div class="section-inner relative fade-up">
    <h2 class="section-title mb-8">{howTo.title}</h2>
    <div class="grid gap-6 md:grid-cols-3">
      {howTo.steps.map((step, index) => (
        <Card class="bg-ink/80 p-6">
          <p class="mb-3 text-xs uppercase tracking-[0.3em] text-gold">
            {howTo.stepLabel} {index + 1}
          </p>
          <h3 class="mb-2 text-lg font-semibold text-sand">{step.title}</h3>
          <p class="text-sm text-fog">{step.body}</p>
        </Card>
      ))}
    </div>
    <div class="mt-10 flex justify-center">
      <ButtonGold
        fullWidth
        class="gap-2 sm:w-auto"
        href={uberEats.href}
        dataTrack={AnalyticsEvents.uberEatsBottom}
        ariaLabel={`${howTo.ctaLabel} - Como pedir`}
        icon
      >
        {howTo.ctaLabel}
      </ButtonGold>
    </div>
  </div>
</section>
