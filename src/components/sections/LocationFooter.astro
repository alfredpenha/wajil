---
import { withBase } from '../../lib/images';

const { brand, location, footer } = Astro.props;
const privacyHref = withBase(footer.privacyHref);
---
<section id="ubicacion" class="section-x border-t border-fog/10 py-12">
  <div class="section-inner">
    <div class="flex flex-col gap-8 md:flex-row md:items-center md:justify-between fade-up">
      <div class="space-y-2">
        <p class="text-xs uppercase tracking-[0.3em] text-fog">{location.kicker}</p>
        <h2 class="section-title">{location.title}</h2>
        <a class="text-xs uppercase tracking-[0.3em] text-gold" href={location.uberHref}>
          {location.uberLabel}
        </a>
      </div>
      <div class="flex gap-6 text-xs uppercase tracking-[0.2em] text-fog">
        {location.social.map((link) => (
          <a class="transition hover:text-gold" href={link.href}>{link.label}</a>
        ))}
      </div>
    </div>
  </div>
</section>

<footer class="section-x border-t border-fog/10 py-8">
  <div class="section-inner flex flex-col gap-6 text-xs uppercase tracking-[0.2em] text-fog md:flex-row md:items-center md:justify-between">
    <div class="flex flex-col gap-2">
      <div class="flex items-center gap-3 text-gold">
        <span class="text-sm font-semibold tracking-[0.4em]">{footer.lockup}</span>
        <span class="text-[10px] text-fog">{brand.tagline}</span>
      </div>
      {footer.trustLine ? (
        <span class="text-[10px] uppercase tracking-[0.25em] text-fog/70">{footer.trustLine}</span>
      ) : null}
    </div>
    <div class="flex items-center gap-6">
      <span>{footer.note}</span>
      <a class="transition hover:text-gold" href={privacyHref}>{footer.privacyLabel}</a>
    </div>
  </div>
</footer>
