---
const { origin, uberEats } = Astro.props;
---
<section id="origen" class="relative overflow-hidden border-t border-fog/10 px-6 py-16 md:px-12">
  <picture>
    {origin.image.avif ? <source srcset={origin.image.avif} type="image/avif" /> : null}
    {origin.image.webp ? <source srcset={origin.image.webp} type="image/webp" /> : null}
    <img
      class="absolute inset-0 h-full w-full object-cover"
      src={origin.image.fallback}
      alt={origin.image.alt}
      loading="lazy"
      decoding="async"
    />
  </picture>
  <div class="absolute inset-0 bg-gradient-to-r from-ink via-ink/80 to-transparent"></div>

  <div class="relative mx-auto max-w-6xl">
    <div class="max-w-xl space-y-5 rounded-3xl border border-fog/15 bg-ink/70 p-8">
      <h2 class="text-2xl font-semibold text-sand md:text-3xl">{origin.title}</h2>
      <p class="text-sm leading-relaxed text-fog md:text-base">{origin.body}</p>
      <a
        class="inline-flex rounded-full bg-gold px-6 py-3 text-xs font-semibold uppercase tracking-[0.3em] text-ink transition hover:shadow-glow"
        href={uberEats.href}
        data-track="click_ubereats_origin"
      >
        {origin.ctaLabel}
      </a>
    </div>
  </div>
</section>
