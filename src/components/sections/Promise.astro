---
import { baseFromPath, buildSrcset, withBase } from '../../lib/images';
import Card from '../ui/Card.astro';

const { promise } = Astro.props;
const promiseBase = baseFromPath(promise.background.fallback);
const promiseWidths = [512];
const promiseAvif = buildSrcset(promiseBase, promiseWidths, 'avif');
const promiseWebp = buildSrcset(promiseBase, promiseWidths, 'webp');
const promiseJpg = buildSrcset(promiseBase, promiseWidths, 'jpg');
const promiseFallback = withBase(promise.background.fallback);
---
<section class="section-x relative overflow-hidden border-t border-fog/10 py-16">
  <div class="absolute inset-0">
    <picture>
      <source srcset={promiseAvif} sizes="100vw" type="image/avif" />
      <source srcset={promiseWebp} sizes="100vw" type="image/webp" />
      <img
        class="h-full w-full object-cover opacity-15"
        src={promiseFallback}
        alt={promise.background.alt}
        width="1024"
        height="1024"
        srcset={promiseJpg}
        sizes="100vw"
        aria-hidden="true"
        loading="lazy"
        decoding="async"
      />
    </picture>
    <div class="absolute inset-0 bg-ink/70"></div>
  </div>

  <div class="section-inner fade-up">
    <h2 class="section-title mb-10">{promise.title}</h2>
    <div class="grid gap-6 md:grid-cols-3">
      {promise.bullets.map((bullet) => (
        <Card class="bg-ink/60 p-6">
          <span class="mb-4 inline-flex h-2.5 w-2.5 rounded-full bg-gold/80"></span>
          <h3 class="mb-2 text-lg font-semibold text-sand">{bullet.title}</h3>
          <p class="text-sm text-fog">{bullet.copy}</p>
        </Card>
      ))}
    </div>
  </div>
</section>
