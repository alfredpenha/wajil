---
const {
  href,
  class: className = '',
  fullWidth = false,
  dataTrack,
  ariaLabel,
  icon = false
} = Astro.props;

const classes = [
  'btn-gold',
  fullWidth ? 'w-full' : '',
  icon ? 'gap-2' : '',
  className
]
  .filter(Boolean)
  .join(' ');
---
<a href={href} class={classes} data-track={dataTrack} aria-label={ariaLabel}>
  <slot />
  {icon ? (
    <svg class="h-4 w-4" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5">
      <path d="M5 11L11 5" />
      <path d="M6 5h5v5" />
    </svg>
  ) : null}
</a>
