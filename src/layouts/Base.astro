---
import '../styles/global.css';
import site from '../content/site.json';
import { withBase } from '../lib/images';

const analyticsProvider = import.meta.env.PUBLIC_ANALYTICS_PROVIDER ?? 'plausible';
const plausibleDomain = import.meta.env.PUBLIC_PLAUSIBLE_DOMAIN ?? site.meta.domain;
const ga4Id = import.meta.env.PUBLIC_GA4_ID ?? '';
const heroPreload = Astro.props.heroPreload ?? null;
const jsonLd = Astro.props.jsonLd ?? null;

const pageTitle = Astro.props.title
  ? `${Astro.props.title} - ${site.brand.name}`
  : site.meta.title;
const pageDescription = Astro.props.description ?? site.meta.description;
const siteUrl = site.meta.url ?? `https://${site.meta.domain}`;
const ogImage = site.meta.ogImage ?? '/assets/images/img1-hero-16x9.jpg';
const ogImageAlt = site.meta.ogImageAlt ?? site.brand.name;
const ogImagePath = withBase(ogImage);
const ogImageUrl = ogImagePath.startsWith('http') ? ogImagePath : new URL(ogImagePath, siteUrl).toString();
const favicon = withBase(site.meta.favicon);
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={pageDescription} />
    <meta name="theme-color" content="#080808" />
    <title>{pageTitle}</title>
    <link rel="icon" href={favicon} />
    <link rel="canonical" href={Astro.url} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Fraunces:wght@600;700&family=Sora:wght@400;600&display=swap"
    />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={site.brand.name} />
    <meta property="og:locale" content="es_MX" />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:alt" content={ogImageAlt} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="twitter:image:alt" content={ogImageAlt} />

    {heroPreload?.desktop ? (
      <link rel="preload" as="image" href={heroPreload.desktop} media="(min-width: 768px)" />
    ) : null}
    {heroPreload?.mobile ? (
      <link rel="preload" as="image" href={heroPreload.mobile} media="(max-width: 767px)" />
    ) : null}

    {jsonLd ? (
      <script type="application/ld+json">{JSON.stringify(jsonLd)}</script>
    ) : null}

    {analyticsProvider === 'plausible' && plausibleDomain ? (
      <script
        defer
        data-domain={plausibleDomain}
        src="https://plausible.io/js/script.js"
      ></script>
    ) : null}

    {analyticsProvider === 'ga4' && ga4Id ? (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${ga4Id}`}></script>
        <script is:inline define:vars={{ ga4Id }}>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', ga4Id);
        </script>
      </>
    ) : null}
  </head>
  <body class="bg-ink text-sand">
    <slot />
  </body>
</html>
